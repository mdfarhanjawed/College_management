<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(note, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <% if note.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(note.errors.count, "error") %> prohibited this note from being saved:</h2>
          <ul>
          <% note.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-sm-2">        
          <%= f.label :body %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :body, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">        
          <%= f.label :Add_tags %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :all_tags, placeholder: "Title of article", autofocus: true %>
        </div>
      </div>   
     <%= f.hidden_field :user_id, user_id: current_user.id %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>  
    <% end %>
  </div>
</div>
